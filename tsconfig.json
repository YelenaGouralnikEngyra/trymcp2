{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"types": ["node", "@playwright/test"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["tests/**/*.ts", "playwright.config.ts", "helpers/**/*.ts", "src/**/*.ts"]
}
